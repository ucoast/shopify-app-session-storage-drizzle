{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/ts",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "es2020",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext.asynciterable"
    ],
    "typeRoots": ["./node_modules/@types"]
  }
}
